/* CONNECTION_GENERATION: Draws connections between lands and players */
<CONNECTION_GENERATION>
accumulate_connections 			/* Allows you to replace terrains created in previous connections with new terrains */
/* Connect all lands creating river crossings and tree clearing */
create_connect_all_lands
{
	replace_terrain 	WOODIES LAYER_A			/* Replace WOODIES with LAYER_A */
	replace_terrain 	WOODIES_B LAYER_A		/* Replace WOODIES_B with LAYER_B */
	replace_terrain 	WOODIES_C LAYER_A		/* Replace WOODIES_C with LAYER_C */
	replace_terrain		VODA MELCINA			/* Replace VODA with MELCINA */	
	/* Terrain cost scale of 1-100 - lower values are more favorable - 0 = impassable */ 
	terrain_cost 		LAYER_A 			1		
	terrain_cost 		LAYER_B 			1		
	terrain_cost 		LAYER_C 			1		
	terrain_cost 		LAYER_E 			1		
	terrain_cost 		WOODIES 			10		
	terrain_cost 		WOODIES_B 			10
	terrain_cost 		WOODIES_C 			10		
	terrain_cost 		MELCINA 			30		
	terrain_cost 		VODA 				50		
	terrain_cost		MED_VODA			100				
	terrain_cost 		CLIFF_TILE 			0		
	/* Terrain size radius and variance for replaced terrain */ 
	terrain_size 		VODA 				2 0
	terrain_size 		MED_VODA 			2 0	
	terrain_size 		WOODIES 			2 1		
	terrain_size  		WOODIES_B			2 1
	terrain_size  		WOODIES_C			2 1		
}
/* Connect team TCs with setting specific paths */
create_connect_teams_lands 
{
	/* Replace all terrain in path with corresponding path */
	default_terrain_replacement CESTA									
	/* Terrain cost scale of 1-100 - lower values are more favorable - 0 = impassable  */	 
	terrain_cost 		LAYER_A 			1		
	terrain_cost 		LAYER_B 			1		
	terrain_cost 		LAYER_C 			1		
	terrain_cost 		LAYER_E 			1		
	terrain_cost 		WOODIES 			10		
	terrain_cost 		WOODIES_B 			10
	terrain_cost 		WOODIES_C 			10			
	terrain_cost 		VODA 				0		
