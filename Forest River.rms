/* LAND_GENERATION: Creates large terrain areas including player starting areas */
<LAND_GENERATION>
base_terrain VODA						/* Sets default terrain covering entire map */
/* If Gametype is King of the Hill, create a center island for Wonder */
if KING_OT_HILL								
create_land 
{
	terrain_type 				CLIFF_TILE	/* Set the Terrain type for this land to CLIFF_TILE */
	land_percent 				rnd(80,90)	/* 80-90% land mass */
	land_position 					50 50	/* Land located in center of map (50% 50%) */
	other_zone_avoidance_distance 	4		/* Minimum 4-tile gap between different zones, River width */
	clumping_factor 			rnd(10,30)	/* How much tiles prefer to be together next to other tiles of the same clump. */
	zone 							13		/* Land zone set to 13 */
	land_id 						13		/* Land id set to 13 */
}
endif
create_player_lands 					/* Creates a land for every player with specified parameters */
{
	generate_mode 1
	terrain_type	            CLIFF_TILE  /* Terrain type for player starting clearings */
	set_zone_by_team              			/* Team members share same zone - their lands can grow to touch each other */
	if LENGTH > 220							/* If mapsize is larger than LARGE, adjust map scaling */
	land_percent    	    	rnd(90,94)  /* 90-94% land mass */
	circle_radius 					40 2	/* Positions players in circle: 40% radius from center, 2 variance */
	base_size                     	24    	/* 24-tile square land origin size */
	elseif LENGTH 220                       /* If mapsize is LARGE, adjust map scaling */
	land_percent    	    	rnd(91,95)  /* 91-95% land mass */
	circle_radius 					38 2	/* Positions players in circle: 38% radius from center, 2 variance */
	base_size 						22		/* 22-tile square land origin size */
	elseif LENGTH 200                       /* If mapsize is NORMAL, adjust map scaling */
	land_percent    	    	rnd(92,96)  /* 92-96% land mass */
	circle_radius 					36 2	/* Positions players in circle: 36% radius from center, 2 variance */
	base_size                     	20    	/* 20-tile square land origin size */
	elseif LENGTH 168                       /* If mapsize is MEDIUM, adjust map scaling */
	land_percent    	    	rnd(94,98)  /* 94-98% land mass */  
	circle_radius 					32 2	/* Positions players in circle: 32% radius from center, 2 variance */
	base_size                     	18    	/* 18-tile square land origin size */
    elseif LENGTH 144                     	/* If mapsize is SMALL, adjust map scaling */
	land_percent    	    	rnd(96,99)  /* 96-99% land mass */  
	circle_radius 					31 1   	/* Positions players in circle: 31% radius from center, 1 variance */
	base_size                     	16    	/* 16-tile square land origin size */
	elseif LENGTH < 144                     /* If mapsize is less than SMALL, adjust map scaling */
	land_percent    	    	rnd(98,99)  /* 96-99% land mass */  
	circle_radius 					30 0   	/* Positions players in circle: 30% radius from center, 0 variance */
	base_size                     	14    	/* 14-tile square land origin size */
	endif
	border_fuzziness              	0    	/* 0% border adherence (0=none, 100=sharp borders) */
	/* Tile distance scaling: Larger maps get more tile separation to maintain proportional strategic significance */
	if LENGTH > 240
	other_zone_avoidance_distance 	5    	/* Extreme maps (LENGTH over 240): 5-tile distance between player zones */
	else
	other_zone_avoidance_distance 	4    	/* Regular maps (LENGTH of 240 or below): 4-tile distance between player zones */
	endif
	set_circular_base             			/* Makes land origin circular instead of square */
	clumping_factor 			rnd(10,40)	/* How much tiles prefer to be together next to other tiles of the same clump. */
}	

/* ELEVATION_GENERATION: Create hills */
